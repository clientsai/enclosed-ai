# Environment Variables for Enclosed.AI
# Copy this file to .env.local and fill in your values

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Stripe Product IDs (create these in your Stripe dashboard)
STRIPE_PRODUCT_STARTER_ID=prod_your_starter_product_id
STRIPE_PRICE_STARTER_ID=price_your_starter_price_id
STRIPE_PRODUCT_PRO_ID=prod_your_pro_product_id
STRIPE_PRICE_PRO_ID=price_your_pro_price_id
STRIPE_PRODUCT_ENTERPRISE_ID=prod_your_enterprise_product_id
STRIPE_PRICE_ENTERPRISE_ID=price_your_enterprise_price_id

# SendGrid Configuration
SENDGRID_API_KEY=SG.your_sendgrid_api_key
FROM_EMAIL=noreply@enclosed.ai
ADMIN_EMAIL=admin@enclosed.ai

# Lob Configuration (Direct Mail Service)
LOB_API_KEY=test_your_lob_api_key

# OpenAI Configuration
OPENAI_API_KEY=sk-your_openai_api_key
OPENAI_MODEL=gpt-4-turbo-preview

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# GitHub OAuth (optional)
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Enclosed.AI

# Analytics (optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-your_measurement_id
NEXT_PUBLIC_POSTHOG_KEY=phc_your_posthog_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Error Tracking & Monitoring (optional but recommended)
SENTRY_DSN=https://your_sentry_dsn@sentry.io/your_project_id
NEXT_PUBLIC_SENTRY_DSN=https://your_sentry_dsn@sentry.io/your_project_id
SENTRY_RELEASE=1.0.0
NEXT_PUBLIC_SENTRY_RELEASE=1.0.0
SENTRY_AUTH_TOKEN=your_sentry_auth_token
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=your_sentry_project

# Redis for rate limiting and caching (optional)
REDIS_URL=redis://localhost:6379

# PostHog Analytics Configuration
NEXT_PUBLIC_POSTHOG_KEY=phc_your_posthog_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com
POSTHOG_PROJECT_API_KEY=your_posthog_project_api_key
POSTHOG_HOST=https://app.posthog.com
NEXT_PUBLIC_POSTHOG_DISABLE_SESSION_RECORDING=false
NEXT_PUBLIC_ENABLE_ANALYTICS_IN_DEV=false

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_VERSION=1.0.0

# Logging Configuration
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Feature Flags
ENABLE_SOCIAL_AUTH=false
ENABLE_AI_PERSONALIZATION=true
ENABLE_WEBHOOK_NOTIFICATIONS=true

# Development/Production
NODE_ENV=development
NEXT_PUBLIC_ENVIRONMENT=development
